<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="0.0dip"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:id="@+id/add_review_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing..."/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/add_review_title_select"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.0dip">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_review_title_wrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nested_padding"
                    android:layout_marginTop="@dimen/nested_padding"
                    android:layout_marginRight="@dimen/nested_padding"
                    app:errorEnabled="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="300"
                    app:counterTextAppearance="@style/TextAppearance.AppTheme.Counter">
                    <EditText
                        android:textSize="@dimen/large_text"
                        android:textColor="?android:textColorPrimary"
                        android:id="@+id/add_review_title_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title Hint..."
                        android:inputType="textAutoCorrect|textCapSentences" />
                </android.support.design.widget.TextInputLayout>
                <CheckBox
                    android:id="@+id/submission_send_replies_checkbox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nested_padding"
                    android:layout_marginTop="@dimen/nested_padding"
                    android:layout_marginRight="@dimen/nested_padding"
                    android:layout_marginBottom="@dimen/outer_padding"
                    android:checked="true"
                    android:text="Some checkbox text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:layout_gravity="end|center|top"
            android:id="@+id/submission_send_icon"
            android:visibility="invisible"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:src="@drawable/ic_send_white_24dp"
            android:contentDescription="Send" />
    </android.support.v7.widget.Toolbar>


</RelativeLayout>